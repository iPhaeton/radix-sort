{
  "name": "radix-sort",
  "version": "1.0.0",
  "description": "Radix sort",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "exec": "ts-node -r tsconfig-paths/register",
    "test": "jest '(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$' --config jestconfig.json",
    "test:path": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint . --ext .ts --fix",
    "prepare": "husky install",
    "prepublishOnly": "npm run lint && npm run format && npm test",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iPhaeton/radix-sort.git"
},
  "keywords": [
    "radix",
    "sort",
    "sorting"
  ],
  "author": "Ilya Bohaslauchyk",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  },
  "files": [
    "lib/**/*"
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix --max-warnings 0",
      "prettier --write"
    ]
  }
}
